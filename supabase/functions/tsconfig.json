{
    "compilerOptions": {
        "allowJs": true,
        "lib": [
            "ES2022",
            "DOM"
        ],
        "strict": false,
        "noImplicitAny": false,
        "module": "ESNext",
        "target": "ES2022",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "noEmit": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}